<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/fontawesome-free-5.15.4-web/css/all.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ChessDatabase</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item nav-bar-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">  <i class="fas fa-home"></i>
                                HOME</a>
                        </li>
                        <li class="nav-item nav-bar-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="AllGames" asp-action="Search"><i class="fas fa-search"></i>SEARCH</a>
                        </li>
                        <li class="nav-item nav-bar-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Game" asp-action="CreateGame"><i class="fas fa-chess-king"></i>ADD GAME</a>
                        </li>
                        <li class="nav-item nav-bar-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Game" asp-action="MyGames"><i class="fas fa-chess-rook"></i>MY GAMES</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Fajn - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
