@model IEnumerable<Player>

@{
    ViewData["Title"] = "Top Players";
}
<h4> Top Players <a class="button-color" asp-area="" asp-controller="Player" asp-action="AddPlayer">  <i class="fas fa-plus-square"></i> </a> </h4>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name </th>
            <th scope="col">Title</th>
            <th scope="col">Age</th>
            <th scope="col">Country</th>
            <th scope="col">Elo</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
         @foreach (Player player in Model)
         {
          <tr>
           <th scope="row">@player.Id</th>
           <td>@player.FirstName</td>    
           <td>@player.LastName</td>
           <td>@player.Title</td>    
           <td>@player.Age</td>   
           <td>@player.Country</td>    
           <td>@player.Elo</td>   
           <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-ID="@player.Id">Update</a></td>
           <td><a class="btn btn-sm btn-primary" asp-action="Delete" onclick="return confirm('Are you sure you want to delete this player? (Id = @player.Id)')" asp-route-ID="@player.Id">Delete</a></td>
          </tr>
         }
        </tbody>
    </table>

